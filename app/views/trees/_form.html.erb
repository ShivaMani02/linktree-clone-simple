<%= form_with(model: tree) do |form| %>

<div class="ml-20 w-50 p-3">
  <% if tree.errors.any? %>
    <div  style="color: red">
      <h2><%= pluralize(tree.errors.count, "error") %> prohibited this tree from being saved:</h2>

      <ul>
        <% tree.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :x, style: "display: block" %>
    <%= form.url_field :x , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :instagram, style: "display: block" %>
    <%= form.url_field :instagram , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :youtube, style: "display: block" %>
    <%= form.url_field :youtube, class: "form-control" %>
  </div>

  <div class="form-group" style="display: none">
    <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, value: current_user.id , class: "form-control"%>
  </div>

  <div class="form-group mb-10" style="margin-bottom: 10px">
    <%= form.label :style, style: "display: block" %>
    <%= form.select :style, [["Green", "green"], ["Pink", "pink"], ["Red", "red"]], class: "form-controll" %>
  </div>

  <div class="mt-10" >
    <%= form.submit :class, class: "btn btn-primary" %>
  </div>
</div>

<% end %>
